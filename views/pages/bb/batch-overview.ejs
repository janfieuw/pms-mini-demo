<!DOCTYPE html>
<html lang="nl">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>BATCH - OVERVIEW</title>

  <style>
    @import url('https://fonts.googleapis.com/css2?family=Roboto+Mono:wght@400;500&display=swap');

    body {
      margin: 0;
      background:('/grafisch/background.jpg') no-repeat center/cover fixed;
      font-family: 'Roboto Mono', monospace;
    }

    .card {
      max-width: 1100px;
      margin: 0 auto;
      background: #fff;
      border-radius: 0 0 12px 12px;
      box-shadow: 0 2px 8px rgba(0,0,0,.08);
      padding: 22px 24px 32px 24px;
    }

    h1 {
      margin: 0 0 12px 0;
    
      font-weight: 700;
    }

    .meta {
      font-size: 11px;
      color: #555;
      margin-bottom: 10px;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 11px;
      margin-top: 6px;
    }

    thead th {
      text-align: left;
      padding: 6px 8px;
      background: #f7f7f7;
      border-bottom: 1px solid #ddd;
      white-space: nowrap;
    }

    tbody td {
      padding: 6px 8px;
      border-bottom: 1px solid #eee;
      white-space: nowrap;
    }

    tbody tr:hover {
      background: #fafafa;
    }

    .text-right {
      text-align: right;
    }

    .badge-batch{
      display:inline-block;
      padding:2px 7px;
      border-radius:999px;
      background-color:#e8f5e9;
      border:1px solid #43a047;
      color:#1b5e20;
      font-weight:700;
      font-size:10px;
    }

    a.batch-link {
      text-decoration: none;
      color: #1b5e20;
    }

    a.batch-link:hover {
      text-decoration: underline;
    }
  </style>
</head>

<body>
  <div class="card">
      <h1 style="margin-bottom:2px;">BATCH • OVERVIEW</h1>

    <div class="meta">
      Click batch for details.
    </div>

    <% 
      function formatDateTimeNoSeconds(dt) {
        if (!dt) return '';
        const d = new Date(dt);
        if (isNaN(d.getTime())) return '';
        const dd = String(d.getDate()).padStart(2, '0');
        const mm = String(d.getMonth() + 1).padStart(2, '0');
        const yyyy = d.getFullYear();
        const HH = String(d.getHours()).padStart(2, '0');
        const MM = String(d.getMinutes()).padStart(2, '0');
        return dd + '/' + mm + '/' + yyyy + ' - ' + HH + ':' + MM;
      }

      function sumKg(list) {
        if (!Array.isArray(list)) return 0;
        return list.reduce(function(acc, x) {
          var v = Number(x.kg || 0);
          if (!isFinite(v)) v = 0;
          return acc + v;
        }, 0);
      }
    %>

    <table>
      <thead>
        <tr>
          <th>Batch</th>
          <th>Created</th>
          <th>Period</th>
          <th>Quantity</th>
          <th>Expiry</th>
        </tr>
      </thead>
      <tbody>
        <% if (batches && batches.length) { %>
          <% batches.forEach(function(b){ 
               var producedKg = sumKg(b.producedLots || []);
               var createdLabel = formatDateTimeNoSeconds(b.createdAt);
               var periodLabel = '';
               if (b.startDate && b.endDate) {
                 periodLabel = b.startDate + ' → ' + b.endDate;
               }
          %>
            <tr>
              <td>
              <a href="/bb/batch/<%= b.id %>" class="batch-link">
  <span class="badge-batch"><%= b.batchCode %></span>
</a>

              </td>
              <td><%= createdLabel %></td>
              <td><%= periodLabel %></td>
              <td class="text-left"><%= producedKg %></td>
              <td><%= b.expiryCode || '' %></td>
            </tr>
          <% }); %>
        <% } else { %>
          <tr>
            <td colspan="5">No batches yet.</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
