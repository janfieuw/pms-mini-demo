    <!-- tertiary active knop -->
    <style> a[href="/shifts/stop/step1"]{ background:#fdc500 !important; color:black !important; } </style>

    <script>
    (function() {
      function setActiveByPath() {
        try {
          var path = location.pathname || "";
          var map = [
            { test: /^\/shifts\/(start|new)/i, href: "/shifts/start" },
            { test: /^\/shifts\/stop(\/|$)/i, href: "/shifts/stop/step1" },
            { test: /^\/shifts\/overview(\/|$)/i, href: "/shifts/overview" }
          ];
          var targetHref = null;
          for (var i=0;i<map.length;i++){
            if (map[i].test.test(path)) { targetHref = map[i].href; break; }
          }
          if (!targetHref) return;
          var links = document.querySelectorAll('a[href="/shifts/start"], a[href="/shifts/stop/step1"], a[href="/shifts/overview"]');
          links.forEach(function(a){
            var isActive = a.getAttribute("href") === targetHref;
            a.style.backgroundColor = isActive ? "#fdc500" : a.style.backgroundColor || "transparent";
            a.style.color = isActive ? "black" : a.style.color || "white";
          });
        } catch(e) {}
      }
      if (document.readyState === "loading") {
        document.addEventListener("DOMContentLoaded", setActiveByPath);
      } else {
        setActiveByPath();
      }
    })();
    </script>

   


  </section>
